def Kruse_atten(z, lamb):
    """
    Inputs:
        z: Distance in meters.
        lamb: Wavelength in meters.
    """
    if z > 50e3:
        q = 1.6
    elif z > 6e3:
        q = 1.3
    else:
        q = .585*z**(1/3)
        
    return 13/z*(lamb/550e-9)**(-q)

def FSPL_atten(z, lamb):
    """
    Inputs:
        z: Distance in meters.
        lamb: Wavelength in meters.
    """
    return 1/(4*np.pi*z/lamb)**2
